{
    "openapi": "3.0.0",
    "info": {
        "title": "AZ900 Quiz Generator API",
        "version": "1.0.0",
        "description": "API para buscar perguntas de quiz sobre a certificação AZ-900."
    },
    "servers": [
        {
            "url": "https://musical-trout-g4ppp9r99vx5cvr55-5000.app.github.dev/"
        }
    ],
   "paths": {
        "/quiz": {
            "get": {
                "operationId": "get_quiz_question",
                "summary": "Obtém uma pergunta de quiz AZ-900 por tópico.",
                "parameters": [
                    {
                        "name": "topic",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "description": "O tópico do AZ-900 (ex: custos, segurança)."
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Pergunta do quiz retornada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "question": {"type": "string"},
                                        "options": {"type": "string"},
                                        "correct_answer": {"type": "string"},
                                        "explanation": {"type": "string"}
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/define": {  // <-- NOVO ENDPOINT
            "get": {
                "operationId": "get_service_definition",
                "summary": "Obtém uma definição para um termo-chave do Azure (AZ-900).",
                "parameters": [
                    {
                        "name": "term",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "description": "O termo AZ-900 a ser definido (ex: RBAC, Região)."
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Definição retornada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "definition": {"type": "string"}
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}